LINUX_HEADERS=$(TOOLCHAIN_SYSROOT)/usr

export BUILD_HOST BUILD_HOST_DL TARGET_FLOAT TARGET_ARCH TARGET_ARM_ARCH COMPILER_NAME COMPILER_VERS \
       LINUX_VER_STR TOOLCHAIN_NAME TOOLCHAIN_PREFIX TOOLCHAIN TOOLCHAIN_SYSROOT LINUX_HEADERS

